extends layout

block content
    .container.fixmargin
        .row
            .col-md-3
            .col-md-6
                form(action='/login', method='post')
                    .form-group
                        label.font-weight-bold Username:
                        input.form-control(type='text', name='username', value='', placeholder='Enter Your Username')
                    .form-group
                        label.font-weight-bold Password:
                        input.form-control(type='password', name='password', value='', placeholder='Enter Password')
                    button.btn.btn-dark.borderChange(style='font-size: 10px;', type='submit', name='button') Login
                    br
                    br
                    |         Don't Have An Account? 
                    a.btn.btn-dark.btn-sm.borderChange(href='/register') Register
            .col-md-3
