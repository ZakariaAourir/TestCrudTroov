extends layout

block content   
    .container
        .row
            .col-md-6.fixmargin
                form(action="/homepage/add", method="post")
                    .form-group
                        label.font-weight-bold Name :
                        input.form-control(type='text', name='name', value='', placeholder='Name')
                    .form-group
                        label.font-weight-bold Description :
                        input.form-control(type='text', name='description', value='', placeholder='Description')
                    button.btn.btn-dark.borderChange(type='submit', name='button') Add                 
            .col-md-6
                table(class='table table-hover tableMarg')
                    tr
                        th Name
                        th Description
                    each object, i in objects
                        tr
                            td #{object.name}
                            td #{object.description}
                            td 
                                a.btn.btn-tiny.btn-default(href="/homepage/edit/"+object._id) Edit
