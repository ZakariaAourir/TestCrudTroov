extends layout

block content
    .container.fixmargin
        .row
            .col-md-3
            .col-md-6
                form(action='/register', method='post')
                    .form-group
                        label.font-weight-bold(for='') Full Name:
                        input.form-control(type='text', name='name', value='', placeholder='Enter Your First Name')
                    .form-group
                        label.font-weight-bold(for='') Username:
                        input.form-control(type='text', name='username', value='', placeholder='Enter Your Username')
                    .form-group
                        label.font-weight-bold(for='') Email:
                        input.form-control(type='email', name='email', value='', placeholder='Email')
                    .form-group
                        label.font-weight-bold(for='') Password:
                        input.form-control(type='text', name='password', value='', placeholder='Enter Password')
                    .form-group
                        label.font-weight-bold(for='') Confirm Password:
                        input.form-control(type='text', name='password2', placeholder='Confirm Password')
                    button.btn.btn-dark.borderChange(type='submit', name='button') Register
                    br
                    br
                    |     Have An Account? 
                    a.btn.btn-dark.btn-sm.borderChange(href='/login') Login Now
            .col-md-3
            
