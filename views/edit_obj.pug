extends layout 

block content  
    .container
        .row
            .col-md-3
            .col-md-6
                 form(action="/homepage/edit/"+object._id, method="post")
                    .form-group
                        label.font-weight-bold Name :
                        input.form-control(type='text', name='name', value=object.name, placeholder='Name')
                    .form-group
                        label.font-weight-bold Description :
                        input.form-control(type='text', name='description', value=object.description, placeholder='Description')
                    button.btn.btn-primary.borderChange(type='submit', name='button') Edit
                    button.btn.btn-secondary.borderChange(href='/homepage') Back
                    a.btn.btn-danger.object-delete.float-right.borderChange.deleteFix(data-id=object._id) Delete
                    
            .col-md-3
       
        