        link(rel="stylesheet", href="/css/style.css")
        title Troov 
    body
        include ./includes/include.pug
        br
        .container
            if success_msg
                .alert.alert-success
                    = success_msg
            if error_msg
                .alert.alert-danger
                    = error_msg
            if error
                .alert.alert-danger
                    = error
            if errors
                each err in errors
                    .alert.alert-danger
                         = err.msg
        block content
        section
            footer
                .container
                    .row 
                        .col-md-4
                        .col-md-4.margin-foot
                            Copyright &copy; 2019, Troov
                        .col-md-4
